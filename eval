#!/bin/bash

# Go to script's location
cd $(dirname $0)

if [ $# -lt 2 ]
then
	echo "Usage: $(basename $0) <project> <git repo>"
	exit
fi

util/printtitle "CLONING REPOSITORY"
rm -rf ~/42eval
git clone $2 ~/42eval
if [ $? -eq 0 ]
then
	util/printtitle "REPOSITORY CLONED SUCCESSFULLY"
else
	util/printtitle "ERROR WHILE CLONING REPOSITORY"
fi